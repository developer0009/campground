<% layout('layouts/boilerplate.ejs')%>
    <div class="row mx-auto" style="width: auto;">
        <div class="col-6 offset-3">
            <div class="card" style="width: 18rem;">
                <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %> ">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location %>
                    </li>
                    <li class="list-group-item" id="color">
                        <% if(campground.available){ %>
                            available right now
                            <% } else { %>
                                not available
                                <% } %>
                    </li>
                    <li class="list-group-item">
                        <%=campground.price %> /night
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campground/<%= campground._id %>/edit" class="card-link btn btn-info">Edit</a>
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post" class="d-inline">
                        <button class="btn btn-danger">delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>