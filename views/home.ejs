<% layout('layouts/boilerplate.ejs')%>
    <a href="/campgrounds/new">add product</a>
    <h1 class="text-center">ALL CAMPGROUNDS AVAILABLE HERE</h1>
    <% for( let campground of result) { %>
        <div class="card mt-4">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" class="img-fluid" alt="<%= campground.title %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title %>
                        </h5>
                        <p class="card-text">
                            <%=campground.description %>
                        </p>
                        <p class="card-text text-muted">
                            <%= campground.location %>
                        </p>
                        <p class="card-text" id="checkavailable">
                            <strong>
                                <%=campground.available %>
                            </strong>

                        </p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%=
                                campground.title%> </a>
                    </div>

                </div>
            </div>
        </div>
        <% } %>
            <script src="/app.js"></script>